{
    "site": {
        "title": "Zephyr MD",
        "description": "A modern, accessible static blog generator",
        "language": "es",
        "siteTheme": "default",
        "author": {
            "name": "Ignacio de Miguel Diaz",
            "email": "imigueldiaz@gmailcom",
            "url": "https://blog.imigueldiaz.dev"
        },
        "social": {
            "github": "https://github.com/imigueldiaz/zephyr-md",
            "twitter": "https://twitter.com/imigueldiazdev"
        }
    },
    "blog": {
        "postsPerPage": 10,
        "dateFormat": "dd/MM/yyyy HH:mm",
        "license": {
            "name": "MIT License",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "theme": {
        "defaultMode": "light",
        "accentColor": "#0066cc",
        "syntaxHighlighting": true,
        "darkMode": true
    },
    "auth": {
        "secret": "REPLACE_WITH_A_SECURE_SECRET_KEY",
        "tokenExpiration": "1h",
        "saltRounds": 10,
        "users": [
            {
                "username": "REPLACE_USERNAME",
                "passwordHash": "REPLACE_WITH_HASHED_PASSWORD"
            }
        ]
    }
}