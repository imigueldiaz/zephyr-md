{
  "name": "zephyr-md",
  "version": "0.5.7",
  "description": "A lightning-fast, zero-config TypeScript blog engine that turns Markdown into static HTML. No database, no complexity.",
  "main": "index.js",
  "repository": "https://github.com/imigueldiaz/zephyr-md.git",
  "author": "Ignacio de Miguel Diaz <imigueldiaz@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.20.5",
    "yarn": ">=1.22.22"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist .yarn/cache",
    "clean:cache": "rimraf .yarn/cache",
    "dev": "cross-env yarn clean:cache && ts-node src/index.ts",
    "dev:clean": "cross-env yarn clean && yarn clean:cache && yarn && ts-node src/index.ts",
    "setup:admin": "ts-node src/scripts/generatePassword.ts"
  },
  "dependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/dompurify": "3.2.0",
    "@types/helmet": "4.0.0",
    "@types/jsonwebtoken": "9.0.7",
    "@types/markdown-it": "14.1.2",
    "@types/multer": "1.4.12",
    "@types/sanitize-html": "2.13.0",
    "bcryptjs": "2.4.3",
    "cross-spawn": "^7.0.5",
    "date-fns": "4.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "7.5.0",
    "express-validator": "7.2.1",
    "gray-matter": "^4.0.3",
    "handlebars": "4.7.8",
    "helmet": "8.0.0",
    "highlight.js": "11.11.1",
    "html-minifier-terser": "^7.2.0",
    "isomorphic-dompurify": "2.20.0",
    "jsonwebtoken": "9.0.2",
    "markdown-it": "14.1.0",
    "marked": "^15.0.6",
    "multer": "1.4.5-lts.1",
    "sanitize-html": "2.14.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/marked": "^6.0.0",
    "@types/node": "^22.10.5",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
